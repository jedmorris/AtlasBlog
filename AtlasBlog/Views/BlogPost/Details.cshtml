@model AtlasBlog.Models.BlogPost

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>BlogPost</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Slug)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Slug)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsDeleted)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsDeleted)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Abstract)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Abstract)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BlogPostState)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BlogPostState)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Body)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Body)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Created)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Created)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Updated)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Updated)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Blog)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Blog.BlogName)
        </dd>
    </dl>
</div>

@if (User.Identity!.IsAuthenticated)
{
    <div class="col col-md-8">
        <form asp-controller="Comment" asp-action="Create">
            <input type="hidden" asp-for="Slug"/>
            <input type="hidden" name="BlogPostId" value="@Model.Id"/>
            <textarea name="CommentBody" class="form-control" rows="10" placeholder="Add Comment Here"></textarea>
            <button class="btn btn-lg btn-dark">Submit</button>
        </form>
    </div>
}
else
{
    <a class="nav-link text-dark fw-bold text-black"asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Url.">Please Register/Login to Leave a Comment</a>
}

<hr />
@* Display existing comments  foreach(var comment in Model.Comments) *@
<div class="row">
    @foreach (var comment in Model.Comments)
    {
        <div class="col-12 my-2">
            <div class="card border border-dark mb-3 w-100">
                <div class="card-header">
                    <span class="float-start">Author: @comment.Author.FullName</span>
                    <span class="float-end">Created on: @comment.CreatedDate.ToString("MMM DD, YYYY")</span>
                </div>
                <div class="card-body text-dark">
                    <h5 class="card-title">@comment.CommentBody</h5>
                </div>
                <div class="card-footer">Posted on: @comment.CreatedDate.ToString("MMM dd, yyyy")</div>
            </div>
        </div>
    }
</div>


<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
